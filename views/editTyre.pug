  title Vehicle Registration
div
 
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.nav.me-auto.mb-2.mb-lg-0
          li.nav-item.dropdown
            
        // This is the logout button
        form.d-flex
          a.btn.btn-outline-success.logout-button(href='/' style='border-color:#222d41;') Logout
  // End of the nav bar
  .container.py-5.h-100
    .container.row.justify-content-center
      .card.bg-light
  
  .container.h-100
    .container.row.justify-content-center
      .col.col-xl-9
        .card.bg-light
          .container.col-md-10
            .container
              if tyre
            
                form(method='POST', action='/tyreupdate?id='+tyre._id)
                  .form-group
                      label Tyre:
                      input.form-control(name='tyre', type='text', value=tyre.tyre)
                      br
                  .form-group
                      label Tyre Size:
                      input.form-control(name='tyresize', type='text', value=tyre.tyresize)
                      br
                  .form-group
                      label Car Model:
                      input.form-control(name='carmodel', type='text', value=tyre.carmodel)
                      br
                  .form-group
                      label Tyre Price:
                      input.form-control(name='amount', type='number', value=tyre.amount)
                      br
                  input.btn.btn-primary(type='submit' value='Submit')
