doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='/bootstrap/css/bootstrap.css' rel='stylesheet')
  link(href='/styles.css' rel='stylesheet')
  script(src='/bootstrap/js/bootstrap.js')
  title Vehicle Registration
div
 
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
      
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.nav.me-auto.mb-2.mb-lg-0
          li.nav-item.dropdown
            
        // This is the logout button
        form.d-flex
          a.btn.btn-outline-success.logout-button(href='/' style='border-color:#222d41;') Logout
  // End of the nav bar
  .container.py-5.h-100
    .container.row.justify-content-center
      .card.bg-light
  
  .container.h-100
    .container.row.justify-content-center
      .col.col-xl-9
        .card.bg-light
          .container.col-md-10
            .container
              if signoff 
            
                form(method='POST', action='/updates?id='+signoff._id)
                  .form-group
                      label Car Model:
                      input.form-control(name='model', type='text', value=signoff.model)
                      br
                  .form-group
                      label Driver Name:
                      input.form-control(name='name', type='text', value=signoff.name)
                      br
                  .form-group
                      label Phone Number:
                      input.form-control(name='phonenumber', type='text', value=signoff.phonenumber)
                      br
                  .form-group
                      label Receipt Number:
                      input.form-control(name='receipt', type='number', value=signoff.receipt)
                      br
                  input.btn.btn-primary(type='submit' value='Submit')
